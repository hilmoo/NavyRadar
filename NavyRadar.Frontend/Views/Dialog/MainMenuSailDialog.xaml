<Window
    x:Class="NavyRadar.Frontend.Views.Dialog.MainMenuSailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="600"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Ship ID:" />
        <TextBox
            x:Name="ShipIdTextBox"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Captain ID:" />
        <TextBox
            x:Name="CaptainIdTextBox"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Origin Port:" />
        <TextBox
            x:Name="OriginPortIdTextBox"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Destination Port ID:" />
        <TextBox
            x:Name="DestinationPortIdTextBox"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Status:" />
        <ComboBox
            x:Name="StatusComboBox"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Departure Time:" />
        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Orientation="Horizontal">
            <DatePicker
                x:Name="DepartureTimePicker"
                Width="180"
                Margin="5,5,0,5" />
            <TextBlock
                Margin="5,5,0,5"
                VerticalAlignment="Center"
                Text="H:" />
            <TextBox
                x:Name="DepartureHourTextBox"
                Width="40"
                Margin="2,5,0,5"
                MaxLength="2" />
            <TextBlock
                Margin="5,5,0,5"
                VerticalAlignment="Center"
                Text="M:" />
            <TextBox
                x:Name="DepartureMinuteTextBox"
                Width="40"
                Margin="2,5,5,5"
                MaxLength="2" />
        </StackPanel>

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Arrival Time (Optional):" />
        <StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Orientation="Horizontal">
            <DatePicker
                x:Name="ArrivalTimePicker"
                Width="180"
                Margin="5,5,0,5" />
            <TextBlock
                Margin="5,5,0,5"
                VerticalAlignment="Center"
                Text="H:" />
            <TextBox
                x:Name="ArrivalHourTextBox"
                Width="40"
                Margin="2,5,0,5"
                MaxLength="2" />
            <TextBlock
                Margin="5,5,0,5"
                VerticalAlignment="Center"
                Text="M:" />
            <TextBox
                x:Name="ArrivalMinuteTextBox"
                Width="40"
                Margin="2,5,5,5"
                MaxLength="2" />
        </StackPanel>

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Total Distance (nm):" />
        <TextBox
            x:Name="TotalDistanceNmTextBox"
            Grid.Row="7"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Avg. Speed (knots):" />
        <TextBox
            x:Name="AverageSpeedKnotsTextBox"
            Grid.Row="8"
            Grid.Column="1"
            Margin="5" />
        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Text="Max Speed (knots):" />
        <TextBox
            x:Name="MaxSpeedKnotsTextBox"
            Grid.Row="9"
            Grid.Column="1"
            Margin="5" />


        <StackPanel
            Grid.Row="10"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="5"
                Click="OkButton_Click"
                Content="OK"
                IsDefault="True" />
            <Button
                Width="75"
                Margin="5"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>