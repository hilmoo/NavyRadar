<UserControl
    x:Class="NavyRadar.Frontend.Views.Main.MenuShips"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:NavyRadar.Shared.Entities;assembly=NavyRadar.Shared"
    xmlns:util="clr-namespace:NavyRadar.Frontend.Util"
    xmlns:vm="clr-namespace:NavyRadar.Frontend.ViewModels"
    x:Name="RootMenuShips"
    d:DataContext="{d:DesignInstance Type=vm:MainMenuShipsVm}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <UserControl.Resources>
        <util:EnumDescriptionConverter x:Key="EnumDescConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="150" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView
                x:Name="DataListView"
                Grid.Row="0"
                Margin="5"
                d:DataContext="{d:DesignInstance Type=vm:MainMenuShipsVm}"
                ItemsSource="{Binding Ships}"
                SelectedItem="{Binding CurrentShip, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="50"
                            DisplayMemberBinding="{Binding Id}"
                            Header="Id" />
                        <GridViewColumn
                            Width="180"
                            DisplayMemberBinding="{Binding Name}"
                            Header="Name" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button
                Grid.Row="1"
                Width="150"
                Margin="0,0,20,20"
                HorizontalAlignment="Center"
                d:DataContext="{d:DesignInstance Type=vm:MainMenuShipsVm}"
                Command="{Binding NewShipCommand}"
                Content="New Ship"
                IsEnabled="{Binding IsAdmin}"
                Style="{StaticResource CollapseWhenDisabledButton}" />
        </Grid>

        <GridSplitter
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />

        <ContentControl
            Grid.Column="2"
            Margin="10"
            Content="{Binding ElementName=DataListView, Path=SelectedItem}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="{x:Type models:Ship}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Margin="0,0,0,20"
                                                FontSize="22"
                                                FontWeight="Bold"
                                                Text="Ship Details" />
                                            <Button
                                                Grid.Column="1"
                                                Width="150"
                                                Margin="0,0,20,20"
                                                HorizontalAlignment="Center"
                                                Command="{Binding ElementName=RootMenuShips, Path=DataContext.UpdateShipCommand}"
                                                Content="Update Ship"
                                                IsEnabled="{Binding ElementName=RootMenuShips, Path=DataContext.IsAdmin}"
                                                Style="{StaticResource CollapseWhenDisabledButton}" />
                                            <Button
                                                Grid.Column="2"
                                                Width="150"
                                                Margin="0,0,20,20"
                                                HorizontalAlignment="Center"
                                                Command="{Binding ElementName=RootMenuShips, Path=DataContext.RemoveShipCommand}"
                                                Content="Remove Ship"
                                                IsEnabled="{Binding ElementName=RootMenuShips, Path=DataContext.IsAdmin}"
                                                Style="{StaticResource CollapseWhenDisabledButton}" />
                                        </Grid>

                                        <Border
                                            Height="400"
                                            Margin="0,0,0,20"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <Grid>
                                                <Image Source="https://img.freepik.com/free-photo/aerial-view-container-cargo-ship-sea_335224-715.jpg" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            Margin="0,0,0,15"
                                            Padding="15"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="ID:" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding Id}" />

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="Name:" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    FontSize="16"
                                                    FontWeight="Medium"
                                                    Text="{Binding Name}" />

                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="IMO Number:" />
                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding ImoNumber}" />

                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="MMSI Number:" />
                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding MmsiNumber}" />

                                                <TextBlock
                                                    Grid.Row="4"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="Type:" />
                                                <TextBlock
                                                    Grid.Row="4"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding Type, Converter={StaticResource EnumDescConverter}}" />

                                                <TextBlock
                                                    Grid.Row="5"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="Year Built:" />
                                                <TextBlock
                                                    Grid.Row="5"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding YearBuild}" />

                                                <TextBlock
                                                    Grid.Row="6"
                                                    Grid.Column="0"
                                                    Margin="0,0,0,10"
                                                    FontWeight="SemiBold"
                                                    Text="Length (LOA):" />
                                                <TextBlock
                                                    Grid.Row="6"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,10"
                                                    Text="{Binding LengthOverall}" />

                                                <TextBlock
                                                    Grid.Row="7"
                                                    Grid.Column="0"
                                                    FontWeight="SemiBold"
                                                    Text="Gross Tonnage:" />
                                                <TextBlock
                                                    Grid.Row="7"
                                                    Grid.Column="1"
                                                    Text="{Binding GrossTonnage}" />
                                            </Grid>
                                        </Border>

                                    </StackPanel>
                                </ScrollViewer>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>


                    <Style.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="Select an item from the list to view details." />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>