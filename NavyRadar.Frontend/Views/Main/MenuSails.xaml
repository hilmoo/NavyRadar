<UserControl
    x:Class="NavyRadar.Frontend.Views.Main.MenuSails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="clr-namespace:NavyRadar.Shared.Domain.Sail;assembly=NavyRadar.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavyRadar.Frontend.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    x:Name="RootMenuSails"
    d:DataContext="{d:DesignInstance Type=vm:MainMenuSailsVm}"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="150" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView
                x:Name="DataListView"
                Grid.Row="0"
                Margin="5"
                d:DataContext="{d:DesignInstance Type=vm:MainMenuSailsVm}"
                ItemsSource="{Binding Sails}"
                SelectedItem="{Binding CurrentSail, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="50"
                            DisplayMemberBinding="{Binding Id}"
                            Header="Id" />
                        <GridViewColumn
                            Width="180"
                            DisplayMemberBinding="{Binding Status}"
                            Header="Status" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button
                Grid.Row="1"
                Width="150"
                Margin="0,0,20,20"
                HorizontalAlignment="Center"
                d:DataContext="{d:DesignInstance Type=vm:MainMenuSailsVm}"
                Command="{Binding NewSailCommand}"
                Content="New Sail"
                IsEnabled="{Binding IsAdmin}"
                Style="{StaticResource CollapseWhenDisabledButton}" />
        </Grid>

        <GridSplitter
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />

        <ContentControl
            Grid.Column="2"
            Margin="10"
            Content="{Binding ElementName=DataListView, Path=SelectedItem}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="{x:Type entities:SailWithName}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition MinHeight="300" MaxHeight="800" />
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Text="Sail Details" />
                                                <Button
                                                    Grid.Column="1"
                                                    Width="150"
                                                    Margin="0,0,20,20"
                                                    HorizontalAlignment="Center"
                                                    Command="{Binding ElementName=RootMenuSails, Path=DataContext.UpdateSailCommand}"
                                                    Content="Update Sail"
                                                    IsEnabled="{Binding ElementName=RootMenuSails, Path=DataContext.IsAdmin}"
                                                    Style="{StaticResource CollapseWhenDisabledButton}" />
                                                <Button
                                                    Grid.Column="2"
                                                    Width="150"
                                                    Margin="0,0,20,20"
                                                    HorizontalAlignment="Center"
                                                    Command="{Binding ElementName=RootMenuSails, Path=DataContext.RemoveSailCommand}"
                                                    Content="Remove Sail"
                                                    IsEnabled="{Binding ElementName=RootMenuSails, Path=DataContext.IsAdmin}"
                                                    Style="{StaticResource CollapseWhenDisabledButton}" />
                                            </Grid>

                                            <Border
                                                Margin="0,0,0,15"
                                                Padding="15"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="ID:" />
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding Id}" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Ship ID:" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding ShipId}" />

                                                    <TextBlock
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Captain ID:" />
                                                    <TextBlock
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding CaptainId}" />

                                                    <TextBlock
                                                        Grid.Row="3"
                                                        Grid.Column="0"
                                                        FontWeight="SemiBold"
                                                        Text="Status:" />
                                                    <TextBlock
                                                        Grid.Row="3"
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        FontWeight="Medium"
                                                        Text="{Binding Status}" />
                                                </Grid>
                                            </Border>

                                            <TextBlock
                                                Margin="0,5,0,10"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="Journey" />
                                            <Border
                                                Margin="0,0,0,15"
                                                Padding="15"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Origin Port:" />
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding OriginPortName}" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        FontWeight="SemiBold"
                                                        Text="Destination Port:" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Text="{Binding DestinationPortName}" />
                                                </Grid>
                                            </Border>

                                            <TextBlock
                                                Margin="0,5,0,10"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="Time" />
                                            <Border
                                                Margin="0,0,0,15"
                                                Padding="15"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Departure:" />
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding DepartureTime, StringFormat='g'}" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        FontWeight="SemiBold"
                                                        Text="Arrival:" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Text="{Binding ArrivalTime, StringFormat='g', TargetNullValue='-'}" />
                                                </Grid>
                                            </Border>

                                            <TextBlock
                                                Margin="0,5,0,10"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="Statistics" />
                                            <Border
                                                Padding="15"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Distance (nm):" />
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding TotalDistanceNm, StringFormat='{}{0:F1}', TargetNullValue='-'}" />

                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Margin="0,0,0,10"
                                                        FontWeight="SemiBold"
                                                        Text="Avg. Speed (kn):" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,0,0,10"
                                                        Text="{Binding AverageSpeedKnots, StringFormat='{}{0:F1}', TargetNullValue='-'}" />

                                                    <TextBlock
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        FontWeight="SemiBold"
                                                        Text="Max Speed (kn):" />
                                                    <TextBlock
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Text="{Binding MaxSpeedKnots, StringFormat='{}{0:F1}', TargetNullValue='-'}" />
                                                </Grid>
                                            </Border>
                                        </StackPanel>

                                        <GridSplitter
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            ResizeBehavior="PreviousAndNext"
                                            ResizeDirection="Rows" />

                                        <wv2:WebView2
                                            x:Name="WebView"
                                            Grid.Row="2"
                                            Margin="10,10,10,5"
                                            Loaded="WebView_OnLoaded" />
                                    </Grid>
                                </ScrollViewer>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="Select an item from the list to view details." />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>