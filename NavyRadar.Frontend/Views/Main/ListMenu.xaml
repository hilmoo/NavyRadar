<UserControl
    x:Class="NavyRadar.Frontend.Views.Main.ListMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavyRadar.Frontend.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center">
        <Menu>
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="MinWidth" Value="100" />
                    <Setter Property="Padding" Value="10,5" />
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextAlignment="Center" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MenuBarItemBackgroundSelected}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding BackToHomeCommand}"
                Header="Home" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding ShipsCommand}"
                Header="Ships"
                IsChecked="{Binding IsShipsViewSelected, Mode=OneWay}"
                Visibility="{Binding IsNotCaptain, Converter={StaticResource BoolToVis}}" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding PortsCommand}"
                Header="Ports"
                IsChecked="{Binding IsPortsViewSelected, Mode=OneWay}"
                Visibility="{Binding IsNotCaptain, Converter={StaticResource BoolToVis}}" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding AccountsCommand}"
                Header="Accounts"
                IsChecked="{Binding IsAccountsViewSelected, Mode=OneWay}"
                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding SailsCommand}"
                Header="Sails"
                IsChecked="{Binding IsSailsViewSelected, Mode=OneWay}"
                Visibility="{Binding IsNotCaptain, Converter={StaticResource BoolToVis}}" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding CaptainCommand}"
                Header="Steering"
                IsChecked="{Binding IsCaptainViewSelected, Mode=OneWay}"
                Visibility="{Binding IsCaptain, Converter={StaticResource BoolToVis}}" />
            <MenuItem
                d:DataContext="{d:DesignInstance Type=vm:MainVm}"
                Command="{Binding MyAccountCommand}"
                Header="My Account"
                IsChecked="{Binding IsMyAccountViewSelected, Mode=OneWay}" />
        </Menu>
    </Grid>

</UserControl>