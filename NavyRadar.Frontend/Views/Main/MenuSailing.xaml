<UserControl
    x:Class="NavyRadar.Frontend.Views.Main.MenuSailing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavyRadar.Frontend.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DataContext="{d:DesignInstance Type=vm:MainMenuSailingVm}"
    d:DesignHeight="800"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid>

        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasActiveSail}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">

                    <StackPanel Margin="0,0,20,0">
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            BorderThickness="1"
                            CornerRadius="4">

                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="ID:" />
                                <TextBlock Margin="0,0,0,10" Text="{Binding CurrentSail.Id}" />
                                <TextBlock FontWeight="SemiBold" Text="Ship ID:" />
                                <TextBlock Margin="0,0,0,10" Text="{Binding CurrentSail.ShipId}" />
                                <TextBlock FontWeight="SemiBold" Text="Captain ID:" />
                                <TextBlock Margin="0,0,0,10" Text="{Binding CurrentSail.CaptainId}" />

                                <TextBlock FontWeight="SemiBold" Text="Status:" />
                                <TextBlock
                                    Margin="0,0,0,15"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Text="{Binding CurrentSail.Status}" />

                                <TextBlock FontWeight="SemiBold" Text="Origin Port:" />
                                <TextBlock Margin="0,0,0,10" Text="{Binding CurrentSail.OriginPortName}" />

                                <TextBlock FontWeight="SemiBold" Text="Destination Port:" />
                                <TextBlock Margin="0,0,0,15" Text="{Binding CurrentSail.DestinationPortName}" />

                                <TextBlock FontWeight="SemiBold" Text="Departure:" />

                                <TextBlock Text="{Binding CurrentSail.DepartureTime, StringFormat='g'}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                </ScrollViewer>

                <Button
                    Grid.Row="1"
                    Width="150"
                    Margin="0,20,20,10"
                    HorizontalAlignment="Center"
                    Command="{Binding AddPositionCommand}"
                    Content="Add Coordinate" />

                <Button
                    Grid.Row="2"
                    Width="150"
                    Margin="0,0,20,10"
                    HorizontalAlignment="Center"
                    Command="{Binding ToggleSatusCommand}"
                    Content="Toggle Sail Status" />

                <Button
                    Grid.Row="3"
                    Width="150"
                    Margin="0,20,20,20"
                    HorizontalAlignment="Center"
                    Command="{Binding CompleteSailCommand}"
                    Content="Complete Sailing" />
            </Grid>

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns" />

            <wv2:WebView2
                x:Name="WebView"
                Grid.Column="2"
                Margin="10,10,10,5"
                Loaded="WebView_OnLoaded" />

        </Grid>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="No sail is assigned to you.">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasActiveSail}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>