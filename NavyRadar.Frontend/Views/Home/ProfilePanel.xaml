<UserControl
    x:Class="NavyRadar.Frontend.Views.Home.ProfilePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavyRadar.Frontend.ViewModels"
    d:Background="White"
    d:DesignHeight="1000"
    d:DesignWidth="300"
    DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="0"
            Margin="4,4,4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            d:DataContext="{d:DesignInstance Type=vm:NavigationVm}"
            Command="{Binding SignInCommand}"
            Content="Sign In">
            <Button.Style>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentAccount}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button
            Grid.Column="1"
            Margin="4,4,4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            d:DataContext="{d:DesignInstance Type=vm:NavigationVm}"
            Command="{Binding RegisterCommand}"
            Content="Register">
            <Button.Style>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentAccount}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="4,4,4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            d:DataContext="{d:DesignInstance Type=vm:NavigationVm}"
            Command="{Binding MainCommand}"
            Content="Go To Dashboard">
            <Button.Style>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentAccount}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>