<UserControl
    x:Class="Frontend.Views.Home.TopSidePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="1000"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"
        BorderThickness="1"
        CornerRadius="8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12" Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Name" />
                    <TextBox x:Name="ShipSearchTextBox" />
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Type" />
                    <CheckBox Content="Cargo Vessels" />
                    <CheckBox Content="Tankers" />
                    <CheckBox Content="Passenger Vessels" />
                    <CheckBox Content="High Speed Craft" />
                    <CheckBox Content="Tugs &amp; Special Craft" />
                    <CheckBox Content="Fishing" />
                    <CheckBox Content="Pleasure Craft" />
                    <CheckBox Content="Navigation Aids" />
                    <CheckBox Content="Unspecified Ships" />
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Origin" />
                    <TextBox />
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Destination" />
                    <TextBox />
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Year of Build" />
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" VerticalContentAlignment="Center" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="-" />
                        <TextBox Grid.Column="2" VerticalContentAlignment="Center" />
                    </Grid>
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Length Overall" />
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" VerticalContentAlignment="Center" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="-" />
                        <TextBox Grid.Column="2" VerticalContentAlignment="Center" />
                    </Grid>
                </StackPanel>
                <Separator Margin="0,5" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Text="Gross Tonnage" />
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" VerticalContentAlignment="Center" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="-" />
                        <TextBox Grid.Column="2" VerticalContentAlignment="Center" />
                    </Grid>
                </StackPanel>
                <Separator Margin="0,5" />
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>