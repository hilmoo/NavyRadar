<UserControl
    x:Class="Frontend.Views.Main.MainIndex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frontend.Views.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Frontend.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:MainMenuShipsVm}">
            <local:MenuShips />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainMenuUsersVm}">
            <local:MenuUsers />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainMenuPortsVm}">
            <local:MenuPorts />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainMenuMyAccountVm}">
            <local:MenuMyAccount />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:ListMenu Grid.Row="0" />

        <ContentControl
            Grid.Row="1"
            d:DataContext="{d:DesignInstance Type=vm:MainVm}"
            Content="{Binding CurrentView}" />
    </Grid>
</UserControl>