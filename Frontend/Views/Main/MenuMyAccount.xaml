<UserControl
    x:Class="Frontend.Views.Main.MenuMyAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Frontend.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Ellipse
            Grid.Row="0"
            Width="150"
            Height="150"
            Margin="20"
            HorizontalAlignment="Center"
            Fill="Gainsboro" />

        <Border
            Grid.Row="1"
            Margin="20"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            CornerRadius="8">
            <Grid>
                <Grid.Resources>
                    <Style x:Key="LabelStyle" TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Margin" Value="0,0,10,10" />
                    </Style>
                    <Style x:Key="ValueStyle" TargetType="TextBlock">
                        <Setter Property="Margin" Value="0,0,0,10" />
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" MinWidth="250" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource LabelStyle}"
                    Text="Id:" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
                    Style="{StaticResource ValueStyle}"
                    Text="{Binding CurrentAccount.Id}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource LabelStyle}"
                    Text="Username:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
                    Style="{StaticResource ValueStyle}"
                    Text="{Binding CurrentAccount.Username}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource LabelStyle}"
                    Text="Email:" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
                    Style="{StaticResource ValueStyle}"
                    Text="{Binding CurrentAccount.Email}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource LabelStyle}"
                    Text="Role:" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
                    Style="{StaticResource ValueStyle}"
                    Text="{Binding CurrentAccount.Role}" />
            </Grid>
        </Border>

        <Button
            Grid.Row="2"
            Width="150"
            Margin="0,0,20,20"
            HorizontalAlignment="Center"
            d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
            Command="{Binding UpdateProfileCommand}"
            Content="Update Profile" />

        <Button
            Grid.Row="3"
            Width="150"
            Margin="0,0,20,20"
            HorizontalAlignment="Center"
            d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
            Command="{Binding BackToHomeCommand}"
            Content="Back To Home" />

        <Button
            Grid.Row="4"
            Width="150"
            Margin="0,0,20,20"
            HorizontalAlignment="Center"
            d:DataContext="{d:DesignInstance Type=vm:MainMenuMyAccountVm}"
            Command="{Binding SignOutCommand}"
            Content="Sign Out" />

    </Grid>
</UserControl>