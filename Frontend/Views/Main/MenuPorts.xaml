<UserControl
    x:Class="Frontend.Views.Main.MenuPorts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SharedModels.Models;assembly=Shared"
    xmlns:vm="clr-namespace:Frontend.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <ListView
            x:Name="DataListView"
            Grid.Column="0"
            Margin="5"
            d:DataContext="{d:DesignInstance Type=vm:MainMenuPortsVm}"
            ItemsSource="{Binding Ports}">

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type ListViewItem}}" TargetType="ListViewItem" />
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding Id}"
                        Header="ID" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Name" />
                </GridView>
            </ListView.View>
        </ListView>
        <ContentControl
            Grid.Column="1"
            Margin="5"
            Content="{Binding ElementName=DataListView, Path=SelectedItem}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="models:Port">
                                <StackPanel Margin="10">
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        Text="Details" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ID: " />
                                        <TextBlock Text="{Binding Id}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBlock Text="Name: " />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBlock Text="Country Code: " />
                                        <TextBlock Text="{Binding CountryCode}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBlock Text="Latitude: " />
                                        <TextBlock Text="{Binding Location.Latitude}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBlock Text="Longitude: " />
                                        <TextBlock Text="{Binding Location.Longitude}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Select an item from the list." />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>