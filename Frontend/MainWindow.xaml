<Window
    x:Class="Frontend.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:vm="clr-namespace:Frontend.ViewModels"
    x:Name="MainWindowElement"
    Title="MainWindow"
    Width="1120"
    Height="720"
    MinWidth="1120"
    MinHeight="720"
    AllowsTransparency="False"
    ResizeMode="CanResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:NavigationVm />
    </Window.DataContext>

    <Window.Resources>
        <Style
            x:Key="TitleBarButtonStyle"
            BasedOn="{StaticResource {x:Type Button}}"
            TargetType="Button">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="10" />
        </Style>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            GlassFrameThickness="0"
            NonClientFrameEdges="None"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Padding="0,0,0,2"
            shell:WindowChrome.IsHitTestVisibleInChrome="True"
            Background="{DynamicResource {x:Static SystemColors.AccentColorBrush}}"
            ClipToBounds="True"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
            MouseLeftButtonUp="TitleBar_MouseLeftButtonUp"
            MouseMove="TitleBar_MouseMove">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Text="NavyRadar" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button
                        Click="MinimizeButton_Click"
                        Content="&#xE921;"
                        FontFamily="Segoe Fluent Icons"
                        Style="{StaticResource TitleBarButtonStyle}" />
                    <Button
                        x:Name="MaximizeButton"
                        Click="MaximizeButton_Click"
                        Content="&#xE922;"
                        FontFamily="Segoe Fluent Icons"
                        Style="{StaticResource TitleBarButtonStyle}" />
                    <Button
                        Click="CloseButton_Click"
                        Content="&#xE8BB;"
                        FontFamily="Segoe Fluent Icons"
                        Style="{StaticResource TitleBarButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <ContentControl
            Grid.Row="1"
            Margin="0"
            Content="{Binding CurrentView}" />
    </Grid>
</Window>